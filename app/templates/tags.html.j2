{% extends "base.html.j2" %}
{% block app_content %}
    <h1>{{title}}</h1>
    <hr>

    {% for tag in tags %}
        <a href="{{ url_for('tag', id=tag.id ) }}">{{tag.name}}</a>
        <p>{{ tag.description }}</p>
        <hr>
    {% endfor %}
    <nav aria-label="...">
        <ul class="pager">
            <li class="previous{% if not prev_url %} hidden{% endif %}">
                <a href="{{ prev_url or '#' }}">
                    <span aria-hidden="true">&larr;</span>
                </a>
            </li>
            <li class="next{% if not next_url %} hidden{% endif %}">
                <a href="{{ next_url or '#' }}">
                <span aria-hidden="true">&rarr;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
