{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}

{% block app_content %}
    <h1>{{post.title}}</h1>
    <p>{{post.body}}</p>
    <hr>

    <h2>Answers: </h2>
    {% if post.answers %}
        {% for answer in post.answers %}
            <p>{{ answer.body }}</p>
        {% endfor %}
    {% else %}
        <p>no answers yet</p>
    {% endif %}
    <hr>
    {% if form %}
        {{ wtf.quick_form(form) }}
        <br/>
    {% endif %}
{% endblock %}
