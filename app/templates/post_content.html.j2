{% extends "base.html.j2" %}
{# {% import 'bootstrap/wtf.html' as wtf %} #}

{% block app_content %}
    <h1>{{post.title}}</h1>
    <p>{{post.body}}</p>
    <hr>
        <form action="/post_vote/{{ post.id }}" method="post">
        {{ voteform.csrf_token }}

        <div class="form-group ">
            {{ voteform.upvote(class_='btn btn-primary mt-2') }}
        </div>

        <div class="form-group ">
            {{ voteform.downvote(class_='btn btn-primary mt-2') }}
        </div>
        
        </form>
    <h2>Answers: </h2>
    {% if post.answers %}
        {% for answer in post.answers %}
                {% include "_answer.html.j2" %}
        {% endfor %}
        <hr>
        <h2>Answer this question</h2>
    {% else %}
        <p>no answers yet</p>
        <hr>
        <h2>Be the first to answer</h2>
    {% endif %}
    {% if form %}

        <form action="/post/{{post.id}}" method="post">
            {{ form.csrf_token }}
            <div class="form-group">
                <label>Answer</label>

                {{ form.body(class_='form-control')  }}
            </div>
            <div class="form-group ">
                {{ form.submit(class_='btn btn-primary mt-2') }}
            </div>
        </form>
        <br/>   
    {% endif %}
{% endblock %}
