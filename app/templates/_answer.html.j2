<table class="table table-hover">
    <div class="card">
    
        <div class="d-flex ">
        <div class="d-flex flex-column text-center">
            <form action="/answer_vote/{{ answer.id }}" method="post">
                {{ voteform.csrf_token }}
                <div><button class="bi bi-caret-up btn btn-primary mb-3 p-3 rounded-circle" name="upvote" value="upvote"></button></div>
                <p>{{ answer.total_votes() }}</p>
                <div><button class="bi bi-caret-up btn btn-primary  p-3 rounded-circle icon-flipped" name="downvote" value="downvote"></button></div>
            </form>
        </div>


        <div class="d-flex flex-column  card-body">
            {{ answer.body }}
        </div>
        {# create a modal #}
        {% if answerform and current_user.id == answer.author.id %}
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editAnswerModal"> 
        edit </button>
        <div class="modal fade" id="editAnswerModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Answer</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="{{ url_for('edit_answer', id=answer.id) }}">
                            {{ answerform.csrf_token }}
                            <div class="mb-3">
                                <label for="body" class="form-label">Body</label>
                                {# had to do this to show default value #}
                                <textarea class="form-control" id="body" name="body">{{ answer.body }}</textarea>
                            </div>
                            <div class="mb-3">
                            </div>
                            {{ answerform.submit(class="btn btn-primary", value="Save Changes") }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    </div>
    </div>

</table>
