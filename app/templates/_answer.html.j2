
<div class="container-fluid">
    <div class="d-flex mb-3">
    <div class="d-flex flex-column text-center pe-4">
        <form action="/answer_vote/{{ answer.id }}" method="post">
                {{ voteform.csrf_token }}
            <div><button class=" btn btn-outline-secondary mb-3 p-3 rounded-circle" name="upvote" value="upvote">
                <i class="bi bi-caret-up-fill"></i>
                </button>
            </div>
            <p>{{ answer.total_votes }}</p>
            <div class=" "><button class="btn btn-outline-secondary  p-3 rounded-circle" name="downvote" value="downvote">
                <i class="bi-caret-down-fill"></i>
                </button>
            </div>
            {# TODO: mark as solution  #}
            {# <a href="your link here"> <i class="bi bi-check-circle-fill h1 text-success"></i></a> #}
        </form>
        {% if current_user == answer.post.author %}
            {% if not answer.accepted %}
                <a href="{{ url_for('accept_answer', id=answer.id) }}" class="link-secondary">
                <i class="bi bi-check-circle fs-4"></i>
                </a>        
            {% endif %}
        {% endif %}
        {% if answer.accepted %}
            {% if current_user == answer.post.author %}
                <a href="{{ url_for('accept_answer', id=answer.id) }}" class="link-success">
                <i class="bi bi-check-circle-fill fs-4"></i>
                </a>     
            {% else %}
                <a class="link-success">
                <i class="bi bi-check-circle-fill fs-4"></i>
                </a>     
            {% endif %}

        {% endif %}
    </div>
    <div class="d-flex flex-column flex-grow-1 ">
        <p>{{ answer.body }}</p>
        <div class="d-flex flex-fill overflow-hidden justify-content-end">
            <div class="text-end">
               <img src="{{ answer.author.avatar(70) }}" alt=""  width="16" height="16">
                <a href="{{ url_for('user', username=answer.author.username) }}">{{ answer.author.username }}</a>
               answered {{ moment(answer.created_at).fromNow() }}
                {% if answer.edited_at %}
                
                <p>edited {{ moment(answer.edited_at).fromNow() }}</p>
                

                {% endif %}
                {% if answerform and current_user.id == answer.author.id %}
                {# TODO: make the tooltip work #}
                    <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="edit">
                    <button class="bi bi-pencil-fill btn-link btn" data-bs-toggle="modal" data-bs-target="#editAnswerModal"></button>
                    </span>
                {% endif %}
                </div>
            </div>
    </div>
    </div>


        {# create a modal #}
        {% if answerform and current_user.id == answer.author.id %}
        <div class="modal fade" id="editAnswerModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Answer</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="{{ url_for('edit_answer', id=answer.id) }}">
                            {{ answerform.csrf_token }}
                            <div class="mb-3">
                                <label for="body" class="form-label">Body</label>
                                {# had to do this to show default value #}
                                <textarea class="form-control" id="body" name="body">{{ answer.body }}</textarea>
                            </div>
                            <div class="mb-3">
                            </div>
                            {{ answerform.submit(class="btn btn-primary", value="Save Changes") }}
                            {{ answerform.delete(class="btn btn-danger") }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    </div>

</div>
