{% extends "base.html.j2" %}
{% block app_content %}
  <h1>{{ _('Reset Your Password') }}</h1>
  <div class="row">
    <div class="col-md-4">
      <form method="POST">
        {{ form.csrf_token }}
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=30) }}<br>
        </p>
        <p>
            {{ form.password2.label }}<br>
            {{ form.password2(size=30) }}<br>
        </p>
        <p>
            {{ form.submit() }}
        </p>
      </form>
    </div>
  </div>
{% endblock %}
