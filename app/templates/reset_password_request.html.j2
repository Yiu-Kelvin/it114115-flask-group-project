{% extends "base.html.j2" %}
{% block app_content %}
    <h1>{{ _('Reset Password') }}</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="POST">
                {{ form.csrf_token }}
                <p>
                    {{ form.email.label }}<br>
                    {{ form.email(size=30) }}<br>
                </p>
                <p>
                    {{ form.submit() }}
                </p>
            </form>
        </div>
    </div>
{% endblock %}
